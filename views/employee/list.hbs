<h3 style="text-align:center;">Employee list</h3>
<h3 style="margin-bottom:3px"><a href="/employee" class="btn btn-secondary"><i class="fa fa-plus"></i> Create New </a></h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Address</th>
        </tr>
    </thead>

    <tbody>
        {{#each list}}
        <tr>
            <td> {{this.fullName}} </td>
            <td> {{this.email}} </td>
            <td> {{this.contact}} </td>
            <td> {{this.address}} </td>
            <td>
                <a href="/employee/{{this._id}}" ><i class="fa fa-pencil fa-lg" aria-hidden='true'></i> </a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this Employee?')" ><i class="fa fa-trash fa-lg" aria-hidden="true"></i> </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>